{% extends 'base_admin.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <h2 class="card-title">Liste des utilisateurs</h2>
    <div class="table-responsive" >
        <table class="table user-table no-wrap">
        <thead>
            <tr>
                <th class="border-top-0">Nom d'utilisateur</th>
                <th class="border-top-0">Email</th>
                <th class="border-top-0">Num√©ro de compte</th>
                <th class="border-top-0">Solde du compte</th>
                <th class="border-top-0">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.compte.id }}</td>
                <td>{{ user.compte.solde }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">consulter</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_user_new') }}">Create new</a>
    </div>                 
{% endblock %}
