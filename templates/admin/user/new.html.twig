{% extends 'base_admin.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <h2>Cr√©ation d'un Administrateur</h2>
    <section class="container mt-2 mb-2">
        <div class="row">
            <div class="col-md-6 offset-3 mt-2">
                <fieldset class="mb-3">
                    {{ form_errors(form) }}

                        {{ form_start(form) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.username, {label:'Nom d\'utilisateur'}) }}
                            {{ form_row(form.plainPassword, {
                                label: 'Mot de passe' }) }}
                            <button type="submit" class="btn btn-lg btn-success mt-2">Enregistrer</button>
                            <a href="{{ path('app_user_index') }}" class="btn btn-lg btn-cyan mt-2" >Retour</a>
                        {{ form_end(form) }}
                </fieldset>
            </div>
        </div>
    </section>
